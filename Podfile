
platform :ios, '9.0'

# Uncomment this line if you're using Swift and iOS 8 and above

# use_frameworks!

# Swift targets

def shared_pods
	pod 'SDWebImage'
	pod 'MBProgressHUD'
end

target 'SimpsonsViewer' do

	shared_pods

end

target 'WireViewer' do

	shared_pods

end

# Objective C Targets

target 'SimpsonsViewerOC' do

	shared_pods

end

target 'WireViewerOC' do

	shared_pods

end


